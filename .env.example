# ===========================
# A.R.T - Environment Variables
# ===========================

# Database Configuration
# MySQL connection string
DATABASE_URL=mysql://user:password@localhost:3306/art_db

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=2048

# Manus OAuth Configuration
# Register your app at: https://manus.ai/developers
MANUS_CLIENT_ID=your-client-id
MANUS_CLIENT_SECRET=your-client-secret
MANUS_REDIRECT_URI=http://localhost:3000/auth/callback

# Server Configuration
NODE_ENV=development
API_PORT=3000
API_URL=http://localhost:3000

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# JWT Configuration
# Generate a secure random string for JWT secrets
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars

# AWS S3 Configuration (Optional - for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=art-agente-bucket

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@artplan.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Maps (Optional - for location features)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Feature Flags
FEATURE_REPORTS=true
FEATURE_TRENDING=true
FEATURE_ANALYTICS=true

# Cache Configuration
CACHE_TTL_MINUTES=60
REDIS_URL=redis://localhost:6379

# Monitoring (Optional - for production)
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ENVIRONMENT=development
