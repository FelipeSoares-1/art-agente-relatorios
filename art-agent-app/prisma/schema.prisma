generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RSSFeed {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  url       String   @unique
  createdAt DateTime @default(now())
  
  articles NewsArticle[]
}

model NewsArticle {
  id              Int      @id @default(autoincrement())
  title           String
  link            String   @unique
  summary         String?
  publishedDate   DateTime
  createdAt       DateTime @default(now())
  
  feed    RSSFeed @relation(fields: [feedId], references: [id])
  feedId  Int
  tags            String? // Armazenar tags como uma string JSON
}

model TagCategory {
  id        Int      @id @default(autoincrement())
  name      String   @unique // Nome da tag (ex: "Novos Clientes", "PrÃªmios")
  keywords  String   // JSON array de palavras-chave
  color     String   @default("#3b82f6") // Cor em hex para UI
  enabled   Boolean  @default(true) // Permite desativar temporariamente
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
