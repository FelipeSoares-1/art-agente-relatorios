generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RSSFeed {
  id        Int           @id @default(autoincrement())
  name      String        @unique
  url       String        @unique
  createdAt DateTime      @default(now())
  articles  NewsArticle[]
}

model NewsArticle {
  id         Int      @id @default(autoincrement())
  title      String
  link       String   @unique
  summary    String?
  newsDate   DateTime
  insertedAt DateTime
  createdAt  DateTime @default(now())
  feedId     Int
  tags       String?
  feed       RSSFeed  @relation(fields: [feedId], references: [id])
  status     String   @default("RAW")
}

enum ArticleStatus {
  RAW
  PROCESSED
  PENDING_ENRICHMENT
  ENRICHED
  ENRICHMENT_FAILED
}

model TagCategory {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  keywords  String
  color     String   @default("#3b82f6")
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
