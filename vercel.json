{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/public",
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://localhost:3000/api/:path*"
    }
  ],
  "functions": {
    "server/_core/index.ts": {
      "runtime": "nodejs20.x"
    }
  }
}
